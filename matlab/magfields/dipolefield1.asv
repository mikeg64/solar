


m=.1;  %m=pi.*a.^2.*I/c ring current I radius a

x=-1.0:0.1:1.0;
y=0.1:0.1:2.0;

[X,Y]=meshgrid(x,y);




ctheta=X./sqrt(X.^2+Y.^2);
stheta=Y./sqrt(X.^2+Y.^2);

r=sqrt(X.^2+Y.^2);

br=2.*m.*ctheta./(r.^3);
btheta=m.*stheta./(r.^3);

bx=br.*ctheta-btheta.*stheta;
by=br.*stheta+btheta.*ctheta;
bmag=sqrt(bx.^2+by.^2);
contour(X,Y,bmag,[0.1 ]);
hold on
quiver(X(8:20,:),Y(8:20,:),bx(8:20,:),by(8:20,:),3);
hold off

